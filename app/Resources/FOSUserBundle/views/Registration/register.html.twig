{% extends "FOSUserBundle::layout.html.twig" %}

{% block body %}
<div class="inner-page">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="row" style="border: solid 1px #ccc;">
                    <div class="col-md-6">
                        <h3>{{ 'register.create.header'|trans }}</h3>

                        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">

                            <div class="form-group">
                                <label for="email" class="control-label">{{ 'register.form.email'|trans }}</label>

                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>

                            <div class="form-group">
                                <label for="password" class="control-label">{{ 'register.form.password'|trans }}</label>
                                {{ form_widget(form.plainPassword.first) }}
                                {{ form_errors(form.plainPassword.first) }}
                            </div>

                            <div class="form-group">
                                <label for="password" class="control-label">{{ 'register.form.password_confirmation'|trans }}</label>
                                {{ form_widget(form.plainPassword.second) }}
                                {{ form_errors(form.plainPassword.second) }}
                            </div>

                            {{ form_rest(form) }}

                            <button type="submit" class="btn btn-orange col-lg-12">{{ 'register.form.button'|trans }}</button>
                            <br><br>
                            <div class="line-behind"><span>Är du redan med i Kompisbyrån?</span></div>
                            <a href="{{ path('login') }}" class="btn btn-default col-lg-12">{{ 'login.form.button'|trans }}</a>
                            <br><br>
                        </form>
                    </div>
                    <div class="col-md-6" style="padding: 15px;">
                        <img src="{{ asset('images/register.png') }}" class="img-responsive">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}


