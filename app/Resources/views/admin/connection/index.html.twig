{% extends 'base.html.twig' %}

{% import 'macros.html.twig' as macros %}

{% block body %}

    <div class="inner-page">
        <div class="container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Skapad</th>
                        <th>Lärare</th>
                        <th>Övare</th>
                        <th>Ort</th>
                        <th>Skapad av</th>
                    </tr>
                </thead>
                {% for connection in pagination %}
                    <tbody>
                        <tr>
                            <td>{{ connection.createdAt|date('Y-m-d H:i') }}</td>
                            <td>
                                <strong><a
                                    href="{{ path('admin_user', {'id': connection.fluentSpeaker.id}) }}"
                                >{{ connection.fluentSpeaker.name }}</a></strong>
                                - {{ connection.fluentSpeaker.email }}<br>
                                <em>{{ connection.fluentSpeakerComment }}</em>
                            </td>
                            <td>
                                <strong><a
                                    href="{{ path('admin_user', {'id': connection.learner.id}) }}"
                                >{{ connection.learner.name }}</a></strong>
                                - {{ connection.learner.email }}<br>
                                <em>{{ connection.learnerComment }}</em>
                            </td>
                            <td>{{ connection.city.name }}</td>
                            <td>{{ connection.createdBy.name }}</td>
                        </tr>
                    </tbody>
                {% endfor %}
            </table>


            {{ macros.paging(pagination) }}
        </div>
    </div>

{% endblock %}
