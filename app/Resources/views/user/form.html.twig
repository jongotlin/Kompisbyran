<div class="form-group">
    {{ form_label(form.type) }}
    {{ form_widget(form.type) }}
    {{ form_errors(form.type) }}
</div>
{% endif %}


{% if form.newConnectionRequest is defined %}

    <div class="form-group">
        {{ form_label(connectionRequest.matchingProfileRequestType) }}
        <i class="fa fa-info-circle"
           data-toggle="tooltip"
           data-placement="right"
           title="Tänk på att ju fler önskemål du har, desto längre tid kan det dröja innan vi hittar en matchning till dig. För att öka chanserna till en snabb matchning - gå in med ett öppet sinne!">
        </i>

        <div class="row">
            <div class="col-sm-8">
                {{ form_widget(connectionRequest.matchingProfileRequestType) }}
            </div>
        </div>
        {{ form_errors(connectionRequest.matchingProfileRequestType) }}
    </div>

    <div class="form-group hidden" id="match-family">
        {{ form_label(connectionRequest.matchFamily) }}
        {{ form_widget(connectionRequest.matchFamily) }}
        {{ form_errors(connectionRequest.matchFamily) }}
    </div>


    {{ form_widget(connectionRequest) }}
{% endif %}

