{% extends 'base.html.twig' %}
{% form_theme form 'form/fields.html.twig' %}

{% block body %}

    <div class="inner-page">
        <div class="container">
            <h2><strong>{{ 'user.settings.header'|trans }}</strong></h2>

            <div class="row">
                <div class="col-md-4 col-md-push-8 col-sm-6 col-sm-push-6">
                    <div class="well br-white border-orange black">
                        {{ 'user.settings.intro'|trans({'%municipalities%': start_friend_municipalities('global.or')})|raw}}
                    </div>
                    <div class="well br-white border-orange black">
                        <p>{{ 'user.settings.delete'|trans }}</p>

                        <button id="delete" class="btn btn-danger"><i class="fa fa-warning"></i> {{ 'user.settings.delete.button'|trans }}</button>
                    </div>
                </div>

                <div class="col-md-8 col-md-pull-4 col-sm-6 col-sm-pull-6">
                    <div class="row">
                        {{ include(':user:form.html.twig') }}

                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-4">
                                <button type="submit" class="btn btn-default">
                                    {% if form.connectionRequests is defined %}
                                        {{ 'connection_request.form.button'|trans }}
                                    {% else %}
                                        {{ 'user.form.button'|trans }}
                                    {% endif %}
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
<script type="text/javascript">
    {{ include(':user:form.js.twig') }}

    $(document).ready(function() {
        $('#delete').click(function() {
            if (confirm('{{ 'user.settings.delete.confirm'|trans }}')) {
                $(this).attr('disabled', 'disabled');
                $.ajax({
                    url: Routing.generate('delete'),
                    type: 'DELETE',
                    success: function() {
                        location.href='/logout';
                    }
                });
            }
        });
    });
</script>
{% endblock %}
