{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}

    <div class="inner-page">
        <div class="container">
            <h2><strong>Min profil</strong></h2>

            <div class="row">
                <div class="col-sm-6 col-sm-push-6">
                    <div class="well br-white border-orange black">
                        Vad roligt att du vill kompisfika! Här fyller du i formuläret så att vi ska kunna göra en så bra
                        matchning som möjligt och hitta en ny fikakompis till dig! Har du frågor, tveka inte att maila
                        kontakt@kompisbyran.se. Trevlig fika!
                    </div>
                </div>

                <div class="col-sm-6 col-sm-pull-6">
                    <div class="row">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">

                                <img
                                        src="{% if form.profilePicture.vars.value %}{{ form.profilePicture.vars.value }}{% else %}/images/user.png{% endif %}"
                                        id="profile-picture"
                                        class="img-responsive thumbnail pull-left"
                                        alt=""
                                        width="75px"
                                        style="margin-right:10px;"
                                        >

                                <fb:login-button scope="public_profile" onlogin="checkLoginState();">Hämta din profilbild från Facebook</fb:login-button>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Spara</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}

    <script>
        function statusChangeCallback(response) {
            if (response.status === 'connected') {
                loggedIn();
            }
        }

        function checkLoginState() {
            FB.getLoginStatus(function(response) {
                statusChangeCallback(response);
            });
        }

        window.fbAsyncInit = function() {
            FB.init({
                appId      : '{{ facebook_client_id }}',
                cookie     : true,  // enable cookies to allow the server to access
                                    // the session
                xfbml      : true,  // parse social plugins on this page
                version    : 'v2.2' // use version 2.2
            });
        };

        // Load the SDK asynchronously
        (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

        function loggedIn() {
            FB.api('/me?fields=picture', function(response) {
                document.getElementById('profile-picture').src = response.picture.data.url;
                document.getElementById('user_profilePicture').value = response.picture.data.url;
            });
        }
    </script>

{% endblock %}
