<div class="inner-page">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <img src="/images/Kompis3.JPG" class="img-responsive" alt="Emma och Cecilia" />
                <h1>{{ 'homepage.cta.header'|trans }}<br /><strong>{{ 'homepage.cta.header.strong'|trans }}</strong></h1>
                <p>
                    {{ 'homepage.cta.message'|trans|raw }}
                </p>
                <a href="{{ path('fos_user_registration_register') }}" class="btn btn-lg btn-orange btn-super-lg" style="margin:1.5em;">
                    {{ 'homepage.cta.button'|trans }}
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container" style="margin-top: 1em; border-top: solid 1px #ccc; padding-top:1em;">
    <h2 class="text-center">Kompisbyrån på Instagram</h2>
    <div class="row" style="margin-top: 3em;">
        {% for instagramImage in instagramImages %}
        <div class="col-md-3 col-sm-3" >
            <img src="{{ instagramImage.profilePicture }}" alt="{{ instagramImage.username }}" class="img-circle{% if instagramImage.location %} pull-left{% endif %}" style="width: 50px; margin-right: 1em;">
            <strong>{{ instagramImage.username }}</strong> <a href="https://www.instagram.com/{{ instagramImage.username }}">Följ</a>
            {% if instagramImage.location %}
                <br>{{ instagramImage.location }}
            {% endif %}
            <a href="{{ instagramImage.link }}"><img src="{{ instagramImage.imageUrl }}" class="img-responsive" style="margin-top:1em;"></a>
            <strong>{{ instagramImage.username }}</strong>
            {% if instagramImage.caption|length > 75 %}
                <span class="instagram-short-caption">{{ instagramImage.caption|slice(0, 75) }}... <a href="#" class="instagram-readmore">Läs mer</a></span>
                <span class="instagram-caption hidden">{{ instagramImage.caption }}</span>
            {% else %}
                {{ instagramImage.caption }}
            {% endif %}
        </div>
        {% endfor %}
    </div>
</div>

